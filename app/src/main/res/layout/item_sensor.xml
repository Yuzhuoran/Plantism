<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cw_plant"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:layout_marginBottom="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.waterme.plantism.model.MyTextView
            android:id="@+id/tv_sensor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Sensor - 0002"
            android:textSize="@dimen/subtitletext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.waterme.plantism.model.MyTextView
            android:id="@+id/tv_plant_name"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="@dimen/smalltext"
            app:layout_constraintStart_toStartOf="@+id/tv_sensor_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor_id" />


        <com.waterme.plantism.model.MyTextView
            android:id="@+id/tv_plant_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No plant connected"
            android:textSize="@dimen/smalltext"
            app:layout_constraintStart_toStartOf="@+id/tv_plant_name"
            app:layout_constraintTop_toTopOf="@+id/tv_plant_name" />

    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>